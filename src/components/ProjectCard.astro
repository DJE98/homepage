---
export interface Props {
  name: string;
  description: string;
  url: string;
}
const { name, description, url } = Astro.props;
---
<div class="border rounded p-4 shadow hover:shadow-md transition-shadow">
  <h3 class="font-semibold text-lg mb-2">{name}</h3>
  <p class="text-sm text-gray-700 mb-4">{description}</p>
  <a href={url} target="_blank" rel="noopener" class="text-accent underline">
    View on GitHub
  </a>
</div>
